<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidReferences"
        tools:targetApi="31">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
        </activity>
        <!-- intent-filter 의 action.MAIN을 Splash로 옮겨와 Splash를 앱 실행시 제일 먼저 보여줄 액티비티로 설정한다 -->
        <!-- 그리고 SplashActivity의 Theme을 themes.xml에서 만들어둔 theme Style로 설정한다.-->
        <activity android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/SpalshTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>