<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- 기본적으로 제공되는 액션바를 삭제하기 위해서는 DarkActionBar대신 NoActionBar를 사용하면 된다. -->
    <style name="Theme.AndroidReferences" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 상태바 속성을 여기서 조절할 수 있다. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- 만약 상태바 색상과 상태바 아이템 색상이 겹쳐서 보이지 않는다면 아래 속성을 추가해주자 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>